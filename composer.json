{
    "name": "jaywood/jaycodesit",
    "description": "A personal website project designed with scalability in mind.",
    "type": "project",
    "authors": [
        {
            "name": "JayWood",
            "email": "jaycodesit@gmail.com"
        }
    ],

    "repositories":[
        {
            "type":"composer",
            "url":"https://wpackagist.org",
            "only": [
                "wpackagist-plugin/*",
                "wpackagist-theme/*"
            ]
        }
    ],


    "extra": {
        "installer-paths": {
            "src/mu-plugins/{$name}/": [
                "wpackagist-plugin/akismet"
            ],
            "src/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "src/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        }
    },

    "require": {
        "wpackagist-theme/papanek": "^1.0",
        "wpackagist-plugin/akismet": "^5.1",
        "wpackagist-plugin/contact-form-7": "^5.9.7",
        "wpackagist-plugin/maintenance": "^4.12"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    }
}
